<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Tooltip?>

<?language javascript?>

<VBox fx:id="registerTabPage" minHeight="370.0" minWidth="500.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.andrewhun.finance.welcomepane.RegisterTabPageController">
   <children>
      <AnchorPane prefHeight="370.0" prefWidth="500.0">
         <children>
            <Button fx:id="registerButton" layoutX="199.0" layoutY="315.0" mnemonicParsing="false" onAction="#processFormInput" text="Create Profile" />
            <Label layoutX="88.0" layoutY="82.0" text="Username:" />
            <Label layoutX="88.0" layoutY="132.0" text="Password:" />
            <Label layoutX="45.0" layoutY="185.0" text="Confirm Password:" />
            <PasswordField fx:id="registerPassword" layoutX="168.0" layoutY="128.0" />
            <PasswordField fx:id="registerConfirmation" layoutX="168.0" layoutY="181.0" />
            <TextField fx:id="registerUsername" layoutX="168.0" layoutY="78.0" />
            <Label layoutX="184.0" layoutY="29.0" text="Create Profile">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="50.0" layoutY="237.0" text="Starting Balance:" />
             <TextField fx:id="startingBalance" layoutX="168.0" layoutY="233.0"/>
             <fx:script>
                 var startingBalanceTip =
                 new javafx.scene.control.Tooltip('This field is optional. Your starting balance will be set to 10000.00 USD if you leave it empty');
                javafx.scene.control.Tooltip.install(startingBalance, startingBalanceTip);
                var passwordTip =
                new javafx.scene.control.Tooltip('Your password needs to be at least 8 characters long. It should contain at least one uppercase character and a number.');
                javafx.scene.control.Tooltip.install(registerPassword, passwordTip);
             </fx:script>
            <Label layoutX="326.0" layoutY="237.0" text="(optional)" />
            <Label fx:id="registerError" alignment="CENTER" layoutX="71.0" layoutY="277.0" prefHeight="25.0" prefWidth="337.0" />
         </children>
      </AnchorPane>
   </children>
</VBox>
